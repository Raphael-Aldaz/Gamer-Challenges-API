{
  "name": "gamerchallengesapi",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "tsx --env-file=.env index.ts",
    "dev": "tsx watch --env-file=.env index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "prisma:generate": "prisma generate",
    "db:migrate:local": "prisma migrate dev",
    "db:generate": "docker compose exec gamer-challenges-api npx prisma generate",
    "db:migrate:deploy": "docker compose exec gamer-challenges-api npx prisma migrate deploy",
    "db:migrate:reset": "docker compose exec gamer-challenges-api npx prisma migrate reset --force",
    "db:seed": "docker compose exec gamer-challenges-api npx tsx --env-file=.env prisma/seeding.ts",
    "db:reinit": "pnpm run db:migrate:reset && pnpm run db:migrate:deploy && pnpm run db:generate && pnpm run db:seed",
    "db:dev": "pnpm run db:migrate:local && pnpm run db:generate",
    "======= Pour les tests ========": "========================",
    "test:unit": "tsx --test ./**/*.unit.test.ts",
    "test:spec": "tsx --test --env-file=./src/test/config/.env.test --import ./src/test/config/global-setup.ts --experimental-test-isolation=none ./**/*.spec.test.ts",
    "test": "npm run test:unit && npm run test:spec"
  },
  "packageManager": "pnpm@10.18.1",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^17.2.3",
    "eslint": "^9.31.0",
    "globals": "^16.4.0",
    "prisma": "6.19.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@types/cors": "^2.8.19",
    "argon2": "^0.44.0",
    "axios": "^1.10.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "prettier": "^3.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^4.1.9"
  }
}
